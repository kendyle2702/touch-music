<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WaterReminderVN" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        
        <!-- Card styles -->
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        
        <!-- TabLayout styles -->
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
    </style>

    <style name="Theme.WaterReminderVN" parent="Base.Theme.WaterReminderVN" />
    
    <!-- Button style -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- TabLayout style -->
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/tabIndicator</item>
        <item name="tabSelectedTextColor">@color/tabSelected</item>
        <item name="tabTextColor">@color/tabUnselected</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.TabLayout</item>
    </style>
    
    <!-- TabLayout text style -->
    <style name="TextAppearance.App.TabLayout" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textStyle">bold</item>
    </style>
</resources>